                <table class="table table-hover">
                    <thead class="indigo wow fadeIn" data-wow-delay="0.4s">
                        <tr style="color:white">
                            <th>Created By</th>
                            <th>Name of Issue</th>
                            <th>Category</th>
                            <th>Description</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% var i = 0.6; %>
                            <% server.issues.forEach(function(issue) { %>
                                <tr class="wow fadeIn" data-wow-delay="<%= i %>s">

                <script>
                    window.onload = function () {

                        const submitForm = document.getElementById("issue-submit-form");

                        submitForm.onsubmit = function () {

                            const data = {
                                author: submitForm.ifauthor.value,
                                name: submitForm.ifname.value,
                                tag: submitForm.iftag.value,
                                desc: submitForm.ifdesc.value
                            };

                            var xhr = new XMLHttpRequest();
                            var url = "http://localhost/api/v1/servers/371762864790306817/issues";
                            xhr.open("POST", url, true);
                            xhr.setRequestHeader("Content-type", "application/json");
                            xhr.send(JSON.stringify(data));
                        }

                        const deleteForm = document.getElementById("issue-delete-form");

                        deleteForm.onsubmit = function () {

                            var xhr = new XMLHttpRequest();
                            var url = "http://localhost/api/v1/servers/371762864790306817/issues/" + getIssueId();

                            console.log(url);

                            xhr.open("DELETE", url, true);
                            xhr.send();
                        }
                    }

                    const issueDeletes = document.getElementsByClassName("issue-delete");

                    for (var i = 0; i < issueDeletes.length; i++) {

                        var issueId = issueDeletes[i].id;

                        issueDeletes[i].onclick = function () {

                            currentIssueId = issueId;
                        }
                    }

                    var currentIssueId;

                    function getIssueId() {

                        return currentIssueId;
                    }
                </script>

